{
  "name": "cujo-setup-package",
  "version": "1.0.0",
  "devDependencies": {
    "eslint": "^7.26.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "semistandard": "^16.0.0"
  },
  "scripts": {
    "lint": "eslint -c ./package.json '**/*.js'",
    "hook-setup": "git config core.hooksPath .githooks",
    "prepare": "npm run hook-setup"
  },
  "eslintConfig": {
    "extends": [
      "semistandard",
      "standard-jsx"
    ]
  },
  "eslintIgnore": [
    "**/node_modules/*.js"
  ]
}
