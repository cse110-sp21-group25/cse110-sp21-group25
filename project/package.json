{
  "name": "cujo-setup-package",
  "version": "1.0.0",
  "devDependencies": {
    "eslint": "^7.26.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.7",
    "semistandard": "^16.0.0"
  },
  "scripts": {
    "lint": "eslint ./src/**/*.js",
    "prettier": "prettier --write .",
    "test": "jest --coverage",
    "generate-docs": "jsdoc -c ./config/jsdoc-config.json",
    "hook-setup": "git config core.hooksPath ./project/config/.githooks",
    "prepare": "npm run hook-setup"
  },
  "eslintConfig": {
    "extends": [
      "semistandard",
      "standard-jsx"
    ],
    "globals": {
      "HTMLElement": "writable",
      "$": "writable",
      "customElements": "writable",
      "test": "writable",
      "expect": "writable",
      "Event": "writable"
    }
  },
  "eslintIgnore": [
    "**/node_modules/*.js"
  ],
  "jest": {
    "coverageDirectory": "./testing/coverage",
    "coverageProvider": "v8",
    "testEnvironment": "node"
  }
}
